{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "independent",
    "command": {
        "publish": {
            "ignoreChanges": ["lerna.json","**/*.lock","**/*.js"],
            "message": "chore(release): publish",
            "registry": "https://npm.pkg.github.com",
            "allowBranch": "main"            
        },
        "run": {
            "npmClient": "yarn"
        }
    },
    "workspaces": [
        "packages/gcodego/*",
        "packages/tightcnc/*"
    ],
    "packages": [
        "packages/gcodego/*",
        "packages/tightcnc/*"
    ]      
}