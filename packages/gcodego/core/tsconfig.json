{
  "extends": "../../../tsconfig.json",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist" /* Redirect output structure to the directory. */,
    //"baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "paths": {
      "src/*": ["./src/*"],
      "app/*": ["./*"],
      "components/*": ["./src/components/*"],
      "layouts/*": ["./src/layouts/*"],
      "pages/*": ["./src/pages/*"],
      "assets/*": ["./src/assets/*"],
      "boot/*": ["./src/boot/*"],
      "dialogs/*": ["./src/dialogs/*"]
    }
  },

  "references": [{ "path": "../../tightcnc/server" }]
}
